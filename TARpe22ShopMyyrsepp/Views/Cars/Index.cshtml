@model IEnumerable<TARpe22ShopMyyrsepp.Models.Car.CarIndexViewModel>
@{
    int rownumber = 1;
}
<div class="h1">Cars</div>
<div>
    <a asp-action="create" asp-controller="cars" type="submit" class="btn btn-primary">Create</a>
</div>
<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">ModelName</th>
                <th scope="col">Price</th>
                <th scope="col">Manufacturer</th>
                <th scope="col">Type</th>
                <th scope="col">SeatCount</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model)
            {
                <tr>
                    <td>@rownumber</td>
                    <td>@car.ModelName</td>
                    <td>@car.Price</td>
                    <td>@car.Manufacturer</td>
                    <td>@car.Type</td>
                    <td>@car.SeatCount</td>
                    <td>
                        <a asp-action="details" asp-controller="cars" asp-route-id="@car.Id" class="btn btn-info">Details</a>
                        <a asp-action="update" asp-controller="cars" asp-route-id="@car.Id" class="btn btn-info">Update</a>
                        <a asp-action="delete"  asp-controller="cars" asp-route-id="@car.Id" class="btn btn-info">Delete</a>
                    </td>
                </tr>
                rownumber += 1;
            }
        </tbody>
    </table>

</form>